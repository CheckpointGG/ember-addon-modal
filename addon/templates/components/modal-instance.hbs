{{#if isModal}}
    {{component modalName
        modalOptions=options
        modalId=uuid
        autoOpen=true
        on-close=on-close
    }}
{{else}}
    {{#dialog-wrapper on-close=on-close autoOpen=true}}
        {{component modalName
            modalOptions=options
            modalId=uuid
        }}
    {{/dialog-wrapper}}
{{/if}}